# This program calculates prime numbers
# up to 1000

let THRESHOLD = 1000;

fun create_sieve(size) {
    let sieve = [true] * size;
    sieve[0] = sieve[1] = false;
    for (i from 2 to size) {
        if (not sieve[i]) continue;
        for (j from i * 2 to size step i) {
            sieve[j] = false;
        }
    }
    return sieve;
}

let sieve = create_sieve(THRESHOLD);
for (i from 2 to THRESHOLD) {
    if (sieve[i]) {
        echo "Number " + i + " is prime. ";
    }
}

